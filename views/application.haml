!!!
%html{ :lang => "en" }
  %head
    %meta{:'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8"}
    %title Sinatra Bootstrap
    %link{:href=>'/lib/bootstrap/css/bootstrap.min.css', :media => "screen", :rel => 'stylesheet', :type => "text/css"}
    %script{:type => "text/javascript", :src => "/lib/jquery-1.8.3.min.js"}
    %script{:type => "text/javascript", :src => "/lib/bootstrap/js/bootstrap.min.js"}
    
  %body{ :style => "padding-top: 60px;" }
    #header.navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a{ :hred => "/", :class => "brand" } Sinatra Bootstrap
          %ul.nav
            %li
              %a{:href => "/"} Home
            %li
              %a{:href => "/secure/place"} Secret
          %ul.nav.pull-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = username
                %b.caret
              %ul.dropdown-menu
                - if user_signed_in?
                  %li
                    %a{:href => "/logout"} Logout
                - else
                  %li
                    %a{:href => "/login"} Login

    #middle.container
      - if @error
        .alert.alert-error= @error
      = yield

